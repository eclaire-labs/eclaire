{
  "name": "@eclaire/backend",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "license": "MIT",
  "description": "Eclaire backend API server",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclaire-labs/eclaire.git",
    "directory": "apps/backend"
  },
  "bugs": {
    "url": "https://github.com/eclaire-labs/eclaire/issues"
  },
  "homepage": "https://eclaire.co/",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc && tsc-alias && pnpm run generate:tool-signatures",
    "build:with-docs": "pnpm run build && pnpm run generate:openapi",
    "start": "NODE_ENV=production node dist/src/index.js",
    "lint": "biome lint ./",
    "format": "biome format --write ./",
    "check": "biome check ./",
    "fix": "biome check --write ./",
    "db:migrate:apply": "NODE_ENV=development tsx scripts/db-migrate.ts",
    "db:migrate:status": "NODE_ENV=development tsx scripts/db-migrate.ts --status",
    "db:seed:demo": "NODE_ENV=development tsx scripts/db-seed.ts --demo",
    "db:seed:essential": "NODE_ENV=development tsx scripts/db-seed.ts --essential",
    "db:reset:demo": "./scripts/db-reset-local.sh demo",
    "db:reset:essential": "./scripts/db-reset-local.sh essential",
    "db:migrate:apply:prod": "NODE_ENV=production node dist/scripts/db-migrate.js",
    "db:migrate:apply:prod:force": "NODE_ENV=production node dist/scripts/db-migrate.js --force",
    "db:migrate:status:prod": "NODE_ENV=production node dist/scripts/db-migrate.js --status",
    "db:seed:demo:prod": "NODE_ENV=production node dist/scripts/db-seed.js --demo",
    "db:seed:essential:prod": "NODE_ENV=production node dist/scripts/db-seed.js --essential",
    "db:reset:demo:prod": "./scripts/db-reset-container.sh demo",
    "db:reset:essential:prod": "./scripts/db-reset-container.sh essential",
    "db:migrate:generate": "drizzle-kit generate",
    "db:generate:baseline": "./scripts/db-generate-baseline.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:list": "vitest list",
    "test:integration": "vitest run src/tests/api/**/*.test.ts",
    "test:integration:watch": "vitest src/tests/api/**/*.test.ts",
    "test:ai-conversations": "vitest run src/tests/api/ai-conversations.test.ts",
    "test:ai-prompt": "vitest run src/tests/api/ai-prompt.test.ts",
    "test:ai-prompt-stream": "vitest run src/tests/api/ai-prompt-stream.test.ts",
    "test:user": "vitest run src/tests/api/user.test.ts",
    "test:auth-session": "vitest run src/tests/api/auth-session.test.ts",
    "test:auth-api-key": "vitest run src/tests/api/auth-api-key.test.ts",
    "test:all": "vitest run src/tests/api/all.test.ts",
    "test:bookmarks": "vitest run src/tests/api/bookmarks.test.ts",
    "test:notes": "vitest run src/tests/api/notes.test.ts",
    "test:tasks": "vitest run src/tests/api/tasks*.test.ts",
    "test:tasks:crud": "vitest run src/tests/api/tasks.crud.test.ts",
    "test:tasks:search": "vitest run src/tests/api/tasks.search.test.ts",
    "test:tasks:recurrence": "vitest run src/tests/api/tasks.recurrence.test.ts",
    "test:tasks:comments": "vitest run src/tests/api/tasks.comments.test.ts",
    "test:documents": "vitest run src/tests/api/documents.test.ts",
    "test:photos": "vitest run src/tests/api/photos.test.ts",
    "test:channels": "vitest run src/tests/api/channels.test.ts",
    "test:ai-model-eval": "vitest run src/tests/api/ai-model-eval.test.ts",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:tool-signatures": "tsx scripts/generate-tool-signatures.ts"
  },
  "dependencies": {
    "@hono/node-server": "1.19.6",
    "@hono/standard-validator": "^0.1.5",
    "axios": "1.13.2",
    "bcrypt": "6.0.0",
    "better-auth": "1.3.34",
    "bullmq": "5.63.0",
    "cron-parser": "5.4.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.7",
    "exifr": "7.1.3",
    "file-type": "21.1.0",
    "hono": "4.10.4",
    "hono-openapi": "1.1.1",
    "ioredis": "5.8.2",
    "is-url": "1.2.4",
    "jsonwebtoken": "9.0.2",
    "nanoid": "5.1.6",
    "offline-geocode-city": "1.0.2",
    "openapi3-ts": "4.5.0",
    "pg": "8.16.3",
    "pino": "9.7.0",
    "pino-pretty": "13.1.2",
    "postgres": "3.4.7",
    "sharp": "0.34.5",
    "telegraf": "4.16.3",
    "tiktoken": "1.0.22",
    "tmp-promise": "3.0.3",
    "tsx": "4.20.6",
    "uuid": "11.1.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bcrypt": "6.0.0",
    "@types/is-url": "1.2.32",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mime-types": "3.0.1",
    "@types/node": "24.10.0",
    "@types/pg": "8.15.6",
    "@types/tmp": "0.2.6",
    "@types/uuid": "10.0.0",
    "@vitejs/plugin-react": "4.7.0",
    "drizzle-kit": "0.31.6",
    "mime-types": "3.0.1",
    "supertest": "7.1.4",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
