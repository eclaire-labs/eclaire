{
  "name": "@eclaire/backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "license": "MIT",
  "description": "Eclaire backend API server",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclaire-labs/eclaire.git",
    "directory": "apps/backend"
  },
  "bugs": {
    "url": "https://github.com/eclaire-labs/eclaire/issues"
  },
  "homepage": "https://eclaire.co/",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "dev": "ECLAIRE_HOME=../.. ECLAIRE_RUNTIME=local NODE_ENV=development NODE_OPTIONS='--conditions=development' tsx watch src/startup.ts",
    "dev:nowatch": "ECLAIRE_HOME=../.. ECLAIRE_RUNTIME=local NODE_ENV=development NODE_OPTIONS='--conditions=development' tsx src/startup.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:with-docs": "pnpm run build && pnpm run generate:openapi",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "start": "NODE_ENV=production node dist/src/index.js",
    "config:show": "ECLAIRE_RUNTIME=local tsx src/scripts/config-show.ts",
    "lint": "biome lint ./",
    "format": "biome format --write ./",
    "check": "biome check ./",
    "fix": "biome check --write ./",
    "db:migrate:apply": "pnpm --filter @eclaire/db db:migrate",
    "db:migrate:status": "pnpm --filter @eclaire/db db:migrate:status",
    "db:seed:test": "NODE_ENV=development tsx scripts/db-seed.ts --demo",
    "db:reset": "./scripts/db-reset.sh",
    "db:reset:demo": "./scripts/db-reset.sh --demo",
    "db:migrate:generate": "pnpm --filter @eclaire/db db:generate",
    "db:generate:baseline": "./scripts/db-generate-baseline.sh",
    "app:upgrade": "ECLAIRE_RUNTIME=local tsx src/scripts/upgrade.ts",
    "app:upgrade-check": "sh -c 'ECLAIRE_RUNTIME=local tsx src/scripts/upgrade-check.ts; c=$?; [ $c -eq 1 ] && exit 0 || exit $c'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:list": "vitest list",
    "test:db": "vitest run src/tests/db",
    "test:db:watch": "vitest src/tests/db",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:ai-conversations": "vitest run --config vitest.integration.config.ts src/tests/integration/ai-conversations.test.ts",
    "test:ai-prompt": "vitest run --config vitest.integration.config.ts src/tests/integration/ai-prompt.test.ts",
    "test:ai-prompt-stream": "vitest run --config vitest.integration.config.ts src/tests/integration/ai-prompt-stream.test.ts",
    "test:user": "vitest run --config vitest.integration.config.ts src/tests/integration/user.test.ts",
    "test:auth-session": "vitest run --config vitest.integration.config.ts src/tests/integration/auth-session.test.ts",
    "test:auth-api-key": "vitest run --config vitest.integration.config.ts src/tests/integration/auth-api-key.test.ts",
    "test:all": "vitest run --config vitest.integration.config.ts src/tests/integration/all.test.ts",
    "test:bookmarks": "vitest run --config vitest.integration.config.ts src/tests/integration/bookmarks.test.ts",
    "test:notes": "vitest run --config vitest.integration.config.ts src/tests/integration/notes.test.ts",
    "test:tasks": "vitest run --config vitest.integration.config.ts src/tests/integration/tasks*.test.ts",
    "test:tasks:crud": "vitest run --config vitest.integration.config.ts src/tests/integration/tasks.crud.test.ts",
    "test:tasks:search": "vitest run --config vitest.integration.config.ts src/tests/integration/tasks.search.test.ts",
    "test:tasks:recurrence": "vitest run --config vitest.integration.config.ts src/tests/integration/tasks.recurrence.test.ts",
    "test:tasks:comments": "vitest run --config vitest.integration.config.ts src/tests/integration/tasks.comments.test.ts",
    "test:documents": "vitest run --config vitest.integration.config.ts src/tests/integration/documents.test.ts",
    "test:photos": "vitest run --config vitest.integration.config.ts src/tests/integration/photos.test.ts",
    "test:channels": "vitest run --config vitest.integration.config.ts src/tests/integration/channels.test.ts",
    "test:ai-model-eval": "vitest run --config vitest.integration.config.ts src/tests/integration/ai-model-eval.test.ts",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:tool-signatures": "tsx scripts/generate-tool-signatures.ts",
    "workers:dev": "NODE_ENV=development SERVICE_ROLE=worker NODE_OPTIONS='--conditions=development' tsx watch src/index.ts"
  },
  "dependencies": {
    "@eclaire/ai": "workspace:*",
    "@eclaire/core": "workspace:*",
    "@eclaire/db": "workspace:*",
    "@eclaire/logger": "workspace:*",
    "@eclaire/queue": "workspace:*",
    "@eclaire/storage": "workspace:*",
    "@bull-board/api": "6.16.2",
    "@bull-board/hono": "6.16.2",
    "@bull-board/ui": "6.16.2",
    "@electric-sql/pglite": "0.3.14",
    "@hono/node-server": "1.19.7",
    "@hono/standard-validator": "0.2.1",
    "@iarna/rtf-to-html": "github:iarna/rtf-to-html#master",
    "@mozilla/readability": "0.6.0",
    "@octokit/plugin-throttling": "11.0.3",
    "@octokit/rest": "22.0.1",
    "async-mutex": "^0.5.0",
    "axios": "1.13.2",
    "bcrypt": "6.0.0",
    "better-auth": "1.4.10",
    "better-sqlite3": "12.5.0",
    "bullmq": "5.66.4",
    "cron-parser": "5.4.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.45.1",
    "execa": "9.6.1",
    "exifr": "7.1.3",
    "file-type": "21.2.0",
    "form-data": "4.0.5",
    "heic-convert": "2.1.0",
    "hono": "4.11.3",
    "hono-openapi": "1.1.2",
    "html-to-text": "9.0.5",
    "ioredis": "5.8.2",
    "is-url": "1.2.4",
    "jsdom": "27.4.0",
    "jsonwebtoken": "9.0.3",
    "markdown-to-text": "0.1.1",
    "marked": "17.0.1",
    "nanoid": "5.1.6",
    "offline-geocode-city": "1.0.2",
    "openapi3-ts": "4.5.0",
    "patchright": "1.57.0",
    "pg": "8.16.3",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "playwright": "1.57.0",
    "postgres": "3.4.7",
    "rtf-parser": "1.3.3",
    "rtf2text": "1.0.1",
    "semver": "7.7.3",
    "sharp": "0.34.5",
    "telegraf": "4.16.3",
    "tmp-promise": "3.0.3",
    "tsx": "4.21.0",
    "turndown": "7.2.2",
    "uuid": "13.0.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bcrypt": "6.0.0",
    "@types/better-sqlite3": "7.6.13",
    "@types/heic-convert": "2.1.0",
    "@types/html-to-text": "9.0.4",
    "@types/is-url": "1.2.32",
    "@types/jsdom": "27.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mime-types": "3.0.1",
    "@types/node": "24.10.4",
    "@types/pg": "8.16.0",
    "@types/semver": "7.7.1",
    "@types/tmp": "0.2.6",
    "@types/turndown": "5.0.6",
    "@vitejs/plugin-react": "5.1.2",
    "drizzle-kit": "0.31.8",
    "mime-types": "3.0.2",
    "supertest": "7.2.2",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
