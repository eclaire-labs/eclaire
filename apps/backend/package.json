{
  "name": "@eclaire/backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "license": "MIT",
  "description": "Eclaire backend API server",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclaire-labs/eclaire.git",
    "directory": "apps/backend"
  },
  "bugs": {
    "url": "https://github.com/eclaire-labs/eclaire/issues"
  },
  "homepage": "https://eclaire.co/",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && pnpm run generate:tool-signatures",
    "build:with-docs": "pnpm run build && pnpm run generate:openapi",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "start": "NODE_ENV=production node dist/src/index.js",
    "lint": "biome lint ./",
    "format": "biome format --write ./",
    "check": "biome check ./",
    "fix": "biome check --write ./",
    "db:migrate:apply": "pnpm --filter @eclaire/db db:migrate",
    "db:migrate:status": "pnpm --filter @eclaire/db db:migrate:status",
    "db:migrate:apply:force": "pnpm --filter @eclaire/db db:migrate -- --force",
    "db:seed:demo": "NODE_ENV=development tsx scripts/db-seed.ts --demo",
    "db:seed:essential": "NODE_ENV=development tsx scripts/db-seed.ts --essential",
    "db:reset:demo": "./scripts/db-reset-local.sh demo",
    "db:reset:essential": "./scripts/db-reset-local.sh essential",
    "db:seed:demo:prod": "NODE_ENV=production tsx scripts/db-seed.ts --demo",
    "db:seed:essential:prod": "NODE_ENV=production tsx scripts/db-seed.ts --essential",
    "db:reset:demo:prod": "./scripts/db-reset-container.sh demo",
    "db:reset:essential:prod": "./scripts/db-reset-container.sh essential",
    "db:migrate:generate": "pnpm --filter @eclaire/db db:generate",
    "db:generate:baseline": "./scripts/db-generate-baseline.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:list": "vitest list",
    "test:db": "vitest run src/tests/db",
    "test:db:watch": "vitest src/tests/db",
    "test:integration": "vitest run src/tests/api/**/*.test.ts",
    "test:integration:watch": "vitest src/tests/api/**/*.test.ts",
    "test:ai-conversations": "vitest run src/tests/api/ai-conversations.test.ts",
    "test:ai-prompt": "vitest run src/tests/api/ai-prompt.test.ts",
    "test:ai-prompt-stream": "vitest run src/tests/api/ai-prompt-stream.test.ts",
    "test:user": "vitest run src/tests/api/user.test.ts",
    "test:auth-session": "vitest run src/tests/api/auth-session.test.ts",
    "test:auth-api-key": "vitest run src/tests/api/auth-api-key.test.ts",
    "test:all": "vitest run src/tests/api/all.test.ts",
    "test:bookmarks": "vitest run src/tests/api/bookmarks.test.ts",
    "test:notes": "vitest run src/tests/api/notes.test.ts",
    "test:tasks": "vitest run src/tests/api/tasks*.test.ts",
    "test:tasks:crud": "vitest run src/tests/api/tasks.crud.test.ts",
    "test:tasks:search": "vitest run src/tests/api/tasks.search.test.ts",
    "test:tasks:recurrence": "vitest run src/tests/api/tasks.recurrence.test.ts",
    "test:tasks:comments": "vitest run src/tests/api/tasks.comments.test.ts",
    "test:documents": "vitest run src/tests/api/documents.test.ts",
    "test:photos": "vitest run src/tests/api/photos.test.ts",
    "test:channels": "vitest run src/tests/api/channels.test.ts",
    "test:ai-model-eval": "vitest run src/tests/api/ai-model-eval.test.ts",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:tool-signatures": "tsx scripts/generate-tool-signatures.ts",
    "workers:dev": "NODE_ENV=development SERVICE_ROLE=worker tsx watch src/index.ts",
    "unified:dev": "NODE_ENV=development SERVICE_ROLE=unified tsx watch src/index.ts"
  },
  "dependencies": {
    "@eclaire/core": "workspace:*",
    "@eclaire/db": "workspace:*",
    "@eclaire/logger": "workspace:*",
    "@eclaire/queue": "workspace:*",
    "@bull-board/api": "6.15.0",
    "@bull-board/hono": "6.15.0",
    "@bull-board/ui": "6.15.0",
    "@electric-sql/pglite": "0.3.14",
    "@hono/node-server": "1.19.6",
    "@hono/standard-validator": "0.2.0",
    "@iarna/rtf-to-html": "github:iarna/rtf-to-html#master",
    "@mozilla/readability": "0.6.0",
    "@octokit/plugin-throttling": "11.0.3",
    "@octokit/rest": "22.0.1",
    "async-mutex": "^0.5.0",
    "axios": "1.13.2",
    "bcrypt": "6.0.0",
    "better-auth": "1.4.5",
    "better-sqlite3": "12.5.0",
    "bullmq": "5.65.1",
    "cron-parser": "5.4.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.45.0",
    "execa": "9.6.1",
    "exifr": "7.1.3",
    "file-type": "21.1.1",
    "form-data": "4.0.5",
    "heic-convert": "2.1.0",
    "hono": "4.10.7",
    "hono-openapi": "1.1.2",
    "html-to-text": "9.0.5",
    "ioredis": "5.8.2",
    "is-url": "1.2.4",
    "jsdom": "27.2.0",
    "jsonwebtoken": "9.0.3",
    "markdown-to-text": "0.1.1",
    "marked": "17.0.1",
    "nanoid": "5.1.6",
    "offline-geocode-city": "1.0.2",
    "openapi3-ts": "4.5.0",
    "patchright": "1.57.0",
    "pg": "8.16.3",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "playwright": "1.57.0",
    "postgres": "3.4.7",
    "rtf-parser": "1.3.3",
    "rtf2text": "1.0.1",
    "sharp": "0.34.5",
    "telegraf": "4.16.3",
    "tiktoken": "1.0.22",
    "tmp-promise": "3.0.3",
    "tsx": "4.21.0",
    "turndown": "7.2.2",
    "uuid": "13.0.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bcrypt": "6.0.0",
    "@types/better-sqlite3": "7.6.13",
    "@types/heic-convert": "2.1.0",
    "@types/html-to-text": "9.0.4",
    "@types/is-url": "1.2.32",
    "@types/jsdom": "27.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mime-types": "3.0.1",
    "@types/node": "24.10.1",
    "@types/pg": "8.15.6",
    "@types/tmp": "0.2.6",
    "@types/turndown": "5.0.6",
    "@vitejs/plugin-react": "5.1.1",
    "drizzle-kit": "0.31.8",
    "mime-types": "3.0.2",
    "supertest": "7.1.4",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}
