{
  "name": "@eclaire/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "license": "MIT",
  "description": "Eclaire - AI-powered productivity platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclaire-labs/eclaire.git"
  },
  "bugs": {
    "url": "https://github.com/eclaire-labs/eclaire/issues"
  },
  "homepage": "https://eclaire.co/",
  "engines": {
    "node": "^24.0.0"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "setup:dev": "node scripts/setup.js dev",
    "setup:dev:yes": "node scripts/setup.js dev --yes",
    "setup:prod": "node scripts/setup.js prod",
    "setup:prod:build": "node scripts/setup.js prod --build",
    "setup:prod:yes": "node scripts/setup.js prod --yes",
    "setup:check": "node scripts/setup.js dev --skip-db --skip-models",
    "setup:clean": "node scripts/setup-clean.js",
    "dev": "pnpm dev:backend & pnpm dev:frontend",
    "dev:backend": "cd apps/backend && pnpm dev",
    "dev:frontend": "cd apps/frontend && pnpm dev",
    "build": "cd apps/backend && pnpm build && cd ../frontend && pnpm build",
    "test": "cd apps/backend && pnpm test && cd ../frontend && pnpm test",
    "lint": "cd apps/backend && pnpm lint && cd ../frontend && pnpm lint",
    "format": "cd apps/backend && pnpm format && cd ../frontend && pnpm format"
  }
}
