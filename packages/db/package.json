{
  "name": "@eclaire/db",
  "version": "0.0.0",
  "private": true,
  "description": "Database abstraction for Eclaire applications - schemas, transactions, migrations",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "development": "./src/types.ts",
      "types": "./src/types.ts",
      "default": "./dist/types.js"
    },
    "./config": {
      "development": "./src/config.ts",
      "types": "./src/config.ts",
      "default": "./dist/config.js"
    },
    "./utils": {
      "development": "./src/utils.ts",
      "types": "./src/utils.ts",
      "default": "./dist/utils.js"
    },
    "./schema/postgres": {
      "development": "./src/schema/postgres.ts",
      "types": "./src/schema/postgres.ts",
      "default": "./dist/schema/postgres.js"
    },
    "./schema/sqlite": {
      "development": "./src/schema/sqlite.ts",
      "types": "./src/schema/sqlite.ts",
      "default": "./dist/schema/sqlite.js"
    },
    "./adapters/postgres/tx": {
      "development": "./src/adapters/postgres/tx.ts",
      "types": "./src/adapters/postgres/tx.ts",
      "default": "./dist/adapters/postgres/tx.js"
    },
    "./adapters/sqlite/tx": {
      "development": "./src/adapters/sqlite/tx.ts",
      "types": "./src/adapters/sqlite/tx.ts",
      "default": "./dist/adapters/sqlite/tx.js"
    },
    "./scripts/migrate": {
      "development": "./src/scripts/migrate.ts",
      "types": "./src/scripts/migrate.ts",
      "default": "./dist/scripts/migrate.js"
    }
  },
  "scripts": {
    "build": "tsc && cp -r src/migrations dist/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:migrate:status": "tsx src/scripts/migrate.ts --status",
    "db:generate": "drizzle-kit generate",
    "db:generate:pg": "DATABASE_TYPE=postgresql drizzle-kit generate",
    "db:generate:sqlite": "DATABASE_TYPE=sqlite drizzle-kit generate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@eclaire/core": "workspace:*",
    "@eclaire/logger": "workspace:*",
    "@electric-sql/pglite": "0.3.14",
    "async-mutex": "0.5.0",
    "better-sqlite3": "12.6.2",
    "dotenv": "17.3.1",
    "drizzle-orm": "0.45.1",
    "postgres": "3.4.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "22.10.2",
    "drizzle-kit": "0.31.8",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
