{
  "name": "@eclaire/db",
  "version": "0.0.0",
  "private": true,
  "description": "Database abstraction for Eclaire applications - schemas, transactions, migrations",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./config": "./src/config.ts",
    "./utils": "./src/utils.ts",
    "./schema/postgres": "./src/schema/postgres.ts",
    "./schema/sqlite": "./src/schema/sqlite.ts",
    "./adapters/postgres/tx": "./src/adapters/postgres/tx.ts",
    "./adapters/sqlite/tx": "./src/adapters/sqlite/tx.ts"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:migrate:status": "tsx src/scripts/migrate.ts --status",
    "db:generate": "drizzle-kit generate",
    "db:generate:pg": "DATABASE_TYPE=postgresql drizzle-kit generate",
    "db:generate:sqlite": "DATABASE_TYPE=sqlite drizzle-kit generate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@eclaire/core": "workspace:*",
    "@eclaire/logger": "workspace:*",
    "@electric-sql/pglite": "0.3.14",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "12.5.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "0.45.0",
    "postgres": "3.4.7"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
