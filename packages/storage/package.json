{
  "name": "@eclaire/storage",
  "version": "0.0.0",
  "private": true,
  "description": "Storage abstraction - local filesystem and S3-compatible backends with zero-dependency core",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "development": "./src/core/index.ts",
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./local": {
      "development": "./src/adapters/local/index.ts",
      "types": "./dist/adapters/local/index.d.ts",
      "default": "./dist/adapters/local/index.js"
    },
    "./memory": {
      "development": "./src/adapters/memory/index.ts",
      "types": "./dist/adapters/memory/index.d.ts",
      "default": "./dist/adapters/memory/index.js"
    },
    "./s3": {
      "development": "./src/adapters/s3/index.ts",
      "types": "./dist/adapters/s3/index.d.ts",
      "default": "./dist/adapters/s3/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@eclaire/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  }
}
