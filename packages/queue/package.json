{
  "name": "@eclaire/queue",
  "version": "0.0.0",
  "private": true,
  "description": "Job queue abstraction - BullMQ and database-backed modes with zero-dependency core",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./core": "./src/core/index.ts",
    "./driver-db": "./src/driver-db/index.ts",
    "./driver-bullmq": "./src/driver-bullmq/index.ts",
    "./transport-http": "./src/transport-http/index.ts",
    "./app": "./src/app/index.ts",
    "./driver-db/schema/sqlite": "./src/driver-db/schema/sqlite.ts",
    "./driver-db/schema/postgres": "./src/driver-db/schema/postgres.ts"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:sqlite": "DB_TYPE=sqlite vitest run",
    "test:pglite": "DB_TYPE=pglite vitest run",
    "test:bullmq": "QUEUE_DRIVER=bullmq vitest run",
    "test:all": "pnpm test:sqlite && pnpm test:pglite && pnpm test:bullmq"
  },
  "dependencies": {
    "@eclaire/core": "workspace:*",
    "@eclaire/db": "workspace:*",
    "@eclaire/logger": "workspace:*",
    "bullmq": "^5.65.1",
    "cron-parser": "^5.4.0",
    "ioredis": "^5.8.2",
    "axios": "^1.13.2",
    "drizzle-orm": "^0.45.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "0.3.14",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "^24.10.1",
    "better-sqlite3": "12.5.0",
    "postgres": "^3.4.5",
    "typescript": "^5.9.3",
    "vitest": "4.0.15"
  }
}
