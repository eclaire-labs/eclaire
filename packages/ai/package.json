{
  "name": "@eclaire/ai",
  "version": "0.0.0",
  "private": true,
  "description": "Unified AI client for Eclaire - multi-provider support with adapters",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "echo 'Usage: pnpm test:integration:local or pnpm test:integration:openrouter' && exit 1",
    "test:integration:local": "AI_TEST_PROVIDER=local vitest run",
    "test:integration:openrouter": "AI_TEST_PROVIDER=openrouter vitest run",
    "test:all": "vitest run && AI_TEST_PROVIDER=local vitest run"
  },
  "dependencies": {
    "tiktoken": "1.0.22"
  },
  "peerDependencies": {
    "@eclaire/logger": "workspace:*",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "zod": "4.3.6"
  }
}
